{
  "name": "browserclaw",
  "version": "0.2.3",
  "description": "AI-friendly browser automation with snapshot + ref targeting. No CSS selectors, no XPath, no vision â€” just numbered refs.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "browser",
    "automation",
    "playwright",
    "ai",
    "snapshot",
    "accessibility",
    "aria",
    "cdp",
    "chrome",
    "web-scraping",
    "agent",
    "llm"
  ],
  "author": "Idan Rubin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idan-rubin/browserclaw.git"
  },
  "homepage": "https://github.com/idan-rubin/browserclaw#readme",
  "bugs": {
    "url": "https://github.com/idan-rubin/browserclaw/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "playwright-core": "^1.50.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  }
}
